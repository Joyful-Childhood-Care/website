---
import Layout from '../layouts/Layout.astro';
import { getEntry } from 'astro:content';
const title = "Joyful Childhood Care Foundation";

const home = await getEntry('pages', 'home');
const { Content } = await home.render();
---

<Layout title={title}>
  <h1 class="title">{title}</h1>
  <p class="tagline">Empowering children &amp; young adults for a better future</p>

  <img class="my-20 object-cover w-full h-96 rounded-lg drop-shadow-lg border-2 border-white/50"
    src="https://images.unsplash.com/photo-1618005182384-a83a8bd57fbe?q=80&w=1528&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" />

  <div class="content">
    <Content />
  </div>
</Layout>

<style>
  h1.title {
    @apply mt-20 bg-gradient-to-r from-green-700 to-yellow-300 bg-clip-text text-transparent;
  }
  p.tagline {
    @apply text-center text-gray-600 text-xl;
  }
</style>
