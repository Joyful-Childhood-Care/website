---
import { getEntry } from "astro:content";
const { data: { value:donation_cta } } = await getEntry('settings', 'donation-cta');
---

<div class="w-full bg-gradient-to-br from-lime-600 to-green-800">
  <div class="w-full max-w-3xl mx-auto p-4">
    <h1 class="bg-gradient-to-br from-amber-300 to-amber-500 inline-block text-transparent bg-clip-text w-full">
      You Can Help!
    </h1>
    <p class="text-center text-white text-lg md:text-xl font-semibold">{donation_cta}</p>
    <div class="text-center my-12 md:my-20">
      <a class="btn btn-amber opacity-100" href="/donate">Donate Today</a>
    </div>
  </div>
</div>