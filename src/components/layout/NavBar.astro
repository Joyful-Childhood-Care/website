---
import { getCollection } from "astro:content";
import { Icon } from "astro-icon/components";
import Button from '../UI/Button.astro';

const items = [
  {
    title: "Projects",
    menu: "projects"
  },
  {
    title: "Get Involved",
    path: "/get-involved"
  },
  {
    title: "Media",
    path: "/media"
  },
  {
    title: "Blog",
    menu: "blog"
  },
  {
    title: "About Us",
    path: "/about-us"
  },
  {
    title: "Contact Us",
    path: "/contact-us"
  }
];

const projects = await getCollection('projects', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});
const blog = await getCollection('blog', ({ data }) => {
  return import.meta.env.PROD ? data.draft !== true : true;
});
---

<nav class="fixed top-0 left-0 w-full h-18 bg-gray-800 border-gray-200 dark:border-gray-600 dark:bg-gray-900" x-data="{ open: false, submenu: false, submenuItem: false }" x-on:click.outside="open=false; submenu = false">
  <div class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl p-4">
      
    <!-- LOGO -->
    <a href="/">
      <img src="/images/logo.jpg" class="h-12 rounded-full" alt="Flowbite Logo" />
    </a>

    <!-- MOBILE MENU TOGGLE -->
    <button type="button" class="inline-flex items-center p-1 w-10 h-10 justify-center md:hidden rounded-lg" x-on:click="open = !open; submenu = false">
      <Icon name="solar:hamburger-menu-linear" class="menu-toggle-button" x-bind:class="open && 'hidden'" />
      <Icon name="solar:close-circle-linear" class="menu-toggle-button" x-bind:class="!open && 'hidden'" />
    </button>

    <!-- MENU ITEMS -->
    <div id="mega-menu-full" class="md:flex items-center justify-between font-medium w-full md:w-auto md:order-1" x-bind:class="open ? 'flex' : 'hidden'">
      <ul class="flex flex-col p-4 md:p-0 mt-4 space-y-4 md:space-y-0 md:space-x-4 lg:space-x-8 md:flex-row md:mt-0 md:border-0">

        {items.map((item) => (
          <li x-bind:class={`!${item.path} && 'hidden'`}>
            <a href={item.path} class="toolbar-item">{item.title}</a>
          </li>
          <li x-bind:class={`!${item.menu} && 'hidden'`}>
            <button class="flex items-center toolbar-item" x-on:click={`submenu = submenu && submenuItem === '${item.menu}' ? false : true; submenuItem = '${item.menu}'`}>
              {item.title}
              <Icon x-show={`submenu && submenuItem === '${item.menu}'`} name="solar:alt-arrow-up-bold" />
              <Icon x-show={`!submenu || submenuItem !== '${item.menu}'`} name="solar:alt-arrow-down-bold" />
            </button>
          </li>
        ))}

      </ul>
    </div>

    <div class="md:block md:order-2 ml-4 mt-4 md:ml-0 md:mt-0" x-bind:class="open ? 'block' : 'hidden'">
      <a href="/donate">
        <Button label="DONATE" icon="solar:dollar-minimalistic-bold" color="amber-800" />
      </a>
    </div>
  </div>

  <!-- DROPDOWN MENU -->
  <div x-show="submenu" class="border-gray-200 shadow-sm bg-white border-y">

    <!-- Projects Submenu -->
    <div x-show="submenuItem === 'projects'" class="submenu-grid">
      {projects.map((p) => (
        <a href={`/projects/${p.slug}`}>
          <span>
            <p class='submenu-title'>{p.data.title}</p>
            <p class='submenu-description'>{p.data.description}</p>
          </span>
        </a>
      ))}
    </div>

    <!-- Blog Submenu -->
    <div x-show="submenuItem === 'blog'" class="submenu-grid">
      {blog.map((b) => (
        <a href={`/blog/${b.slug}`}>
          <span>
            <p class='submenu-title'>{b.data.title}</p>
            <p class='submenu-description'>{b.data.description}</p>
          </span>
        </a>
      ))}
    </div>

  </div>
</nav>

<style>
  .menu-toggle-button {
    @apply text-2xl text-gray-100/80 hover:text-gray-100;
  }
  .toolbar-item {
    @apply text-gray-100/80 hover:text-gray-100;
  }
  .submenu-grid {
    @apply grid gap-4 sm:grid-cols-2 md:grid-cols-3 max-w-4xl px-4 py-5 mx-auto text-gray-900;
  }
  .submenu-grid span {
    @apply block cursor-pointer hover:bg-gray-200 border border-transparent hover:border-gray-200 rounded-lg py-2 px-4;
  }
  .submenu-title {
    @apply text-rose-800 text-center;
  }
  .submenu-description {
    @apply text-gray-800/60;
  }
</style>